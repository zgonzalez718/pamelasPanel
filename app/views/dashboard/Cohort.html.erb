
<p> a table with the cohort name and their start/ending date </p>

<form action="/dashboard/Cohort" method="POST">
    <%= hidden_field_tag "authenticity_token", form_authenticity_token %>
    <input type="text" name="name" placeholder="Name" required>
    <input type="text" name="start" placeholder="Start" required>
    <input type="text" name="end" placeholder="End" required>
    <input type="submit" value="Add new cohort" />
</form> 

    <table class="primary">
    <thead>
      <tr>
        <th>Name</th>
        <th>Start l</th>
        <th>Ends </th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% for items in Cohort.all.reverse do%>
      <tr>
        <td><%= items.name %></td>
        <td><%= items.start%> </td>
        <td><%= items.end %>  </td>
        <td> <a href="/dashboard/CohortInfo">view all cohort info</a> </td>
      </tr>
    </tbody>
    <% end %>
  </table>
 